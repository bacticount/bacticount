<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".HomeScreen" >

    <TextView
        android:id="@+id/homeScreenTextViewWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/home_screen_text_view_welcome"
        android:layout_centerInParent="true"
        android:textSize="28sp"
        android:textIsSelectable="true"
        android:paddingBottom="25sp"
        android:paddingTop="5sp"/>

    <Button
        android:id="@+id/homeScreenButtonStartAnalysis"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:text="@string/home_screen_button_start_analysis"
        android:textColor="#00FA9A"
        android:textSize="50sp"
        android:layout_below="@+id/homeScreenTextViewWelcome"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/homeScreenButtonStartTutorial"
        android:layout_width="349dp"
        android:layout_height="80dp"
        android:text="@string/home_screen_button_start_tutorial"
        android:textColor="#7B68EE"
        android:textSize="50sp"
        android:layout_below="@+id/homeScreenButtonStartAnalysis"
        android:layout_alignRight="@+id/homeScreenButtonStartAnalysis"
        android:layout_alignEnd="@+id/homeScreenButtonStartAnalysis"
        android:layout_alignLeft="@+id/homeScreenButtonStartAnalysis"
        android:layout_alignStart="@+id/homeScreenButtonStartAnalysis" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView5"
        android:src="@drawable/fex"
        android:paddingTop="40sp"
        android:layout_alignTop="@+id/homeScreenTextViewESFile"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/homeScreenTextViewESFile"
        android:layout_width="280sp"
        android:layout_height="wrap_content"
        android:text="@string/home_screen_text_view_ES_file_viewer"
        android:textSize="12sp"
        android:layout_below="@+id/homeScreenButtonStartTutorial"
        android:layout_toRightOf="@+id/imageView5"
        android:paddingTop="30sp"
        android:paddingBottom="15sp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:src="@drawable/fex"
        android:paddingTop="40sp"
        android:layout_alignTop="@+id/homeScreenTextViewESFile"
        android:layout_alignRight="@+id/homeScreenTextViewWelcome"
        android:layout_alignEnd="@+id/homeScreenTextViewWelcome" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="280sp"
        android:layout_height="wrap_content"
        android:text="@string/home_screen_text_view_file_location_instructions"
        android:textSize="18sp"
        android:paddingTop="5sp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/homeScreenTextViewESFile"
        android:layout_alignEnd="@+id/homeScreenTextViewESFile" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:src="@drawable/find_location"
        android:paddingTop="5sp"
        android:layout_below="@+id/homeScreenTextViewESFile"
        android:layout_alignRight="@+id/imageView4"
        android:layout_alignEnd="@+id/imageView4" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView4"
        android:src="@drawable/find_pictures"
        android:layout_below="@+id/imageView3"
        android:layout_centerHorizontal="true" />

    <!--
    <Button
        android:id="@+id/openCVTesting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/homeScreenButtonStartTutorial"
        android:layout_below="@+id/homeScreenButtonStartTutorial"
        android:layout_marginLeft="111dp"
        android:layout_marginTop="28dp"
        android:text="Open CV Testing Lol Stacy" />
        -->

</RelativeLayout>

