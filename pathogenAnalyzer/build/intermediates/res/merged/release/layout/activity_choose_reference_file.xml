<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".ChooseReferenceFile" >

    <TextView
        android:id="@+id/chooseReferenceFileTextViewInstructions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/choose_reference_file_text_view_instructions"
        android:textSize="20sp" />

    <Button
        android:id="@+id/chooseReferenceFileButtonSelectPASCFile"
        android:layout_width="349dp"
        android:layout_height="60dp"
        android:text="@string/choose_reference_file_button_select_PASC_file"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:background="@drawable/secondary_button_background"
        android:layout_marginTop="40dp" />

    <TextView
        android:id="@+id/chooseReferenceFileTextViewPASCSelected"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/no_file_selected_pasc"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/chooseReferenceFileButtonSelectPARRFile"
        android:layout_width="349dp"
        android:layout_height="60dp"
        android:text="@string/choose_reference_file_button_select_PARR_file"
        android:textSize="30sp"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:background="@drawable/secondary_button_background"/>

    <TextView
        android:id="@+id/chooseReferenceFileTextViewPARRSelected"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/no_file_selected_parr"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/chooseReferenceFileButtonProceed"
        android:layout_width="349dp"
        android:layout_height="100dp"
        android:text="@string/choose_reference_file_button_proceed"
        android:textSize="30sp"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="15dp"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:background="@drawable/primary_button_background"/>

</LinearLayout>